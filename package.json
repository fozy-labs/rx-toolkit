{
  "name": "@fozy-labs/rx-toolkit",
  "version": "0.4.8",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist && tsc && tsc-alias",
    "build:watch": "npm run build && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "ts-check": "tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "9.2.0",
    "rimraf": "6.0.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2",
    "zod": "4.1.11"
  },
  "peerDependencies": {
    "react": "19.1.1",
    "rxjs": "7.8.2",
    "zod": "4.1.11"
  },
  "description": "Набор инструментов для реактивного управления состоянием, построенный поверх RxJS.",
  "author": "Vladimir Panev <vova6255@gmail.com>",
  "homepage": "https://github.com/fozy-labs/rx-toolkit",
  "license": "MIT",
  "keywords": [
    "react",
    "rxjs",
    "toolkit",
    "state-management"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fozy-labs/rx-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/fozy-labs/rx-toolkit/issues"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "preferGlobal": false,
  "dependencies": {
    "immer": "^10.1.3"
  }
}
